{
  "name": "my-mahjong-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "preview": "vite preview",
    "commit": "pnpm test && pnpm lint-staged && git-cz",
    "format": "prettier \"./src/**/*.{ts,tsx,css,json,md}\" --write --cache",
    "test": "vitest run",
    "allcheck": "pnpm lint-staged",
    "scaff": "scaffdog generate",
    "scaff:component": "scaffdog generate component"
  },
  "dependencies": {
    "@chakra-ui/modal": "^2.3.1",
    "@chakra-ui/react": "^3.16.0",
    "@emotion/react": "^11.14.0",
    "add": "^2.0.6",
    "jotai": "^2.12.5",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.4",
    "react-icons": "^5.5.0",
    "react-router": "^7.6.2"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^3.16.0",
    "@eslint/js": "^9.24.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitejs/plugin-react": "^4.3.4",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.4.0",
    "eslint": "^9.24.0",
    "eslint-import-resolver-typescript": "^4.3.2",
    "eslint-plugin-chakra-ui": "^0.12.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "git-cz": "^4.9.0",
    "globals": "^15.15.0",
    "lint-staged": "^15.5.1",
    "prettier": "3.5.3",
    "scaffdog": "^4.1.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.2.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,css,scss,json,md}": "pnpm format",
    "**/*": "prettier --write --ignore-unknown",
    "*.{ts,tsx}": [
      "pnpm lint:fix",
      "pnpm lint",
      "bash -c tsc --noEmit"
    ]
  }
}
